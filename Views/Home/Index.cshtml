@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Review App - Where Your Opinion Matters</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="~/css/HomeIndex.css">
</head>
<body>
   @*  <header>
        <nav class="navbar">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="~/Images/logo.jpg" alt="Review App" class="logo">
                </a>
                <button class="btn btn-outline-primary" onclick="location.href='@Url.Action("Login", "User")'">Login</button>
            </div>
