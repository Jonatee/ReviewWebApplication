@model Review_Web_App.Models.DTOs.ReviewerUpdateModel
@{
    Layout = "_Layout1";
}

<link href="~/css/UpdateProfile.css" rel="stylesheet" />
<div class="update-profile-form">
    <h2>Update Your Profile</h2>
    <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input type="text" asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
        </div>
        <div class="form-group">
            <label asp-for="LastName">Last Name</label>
            <input type="text" asp-for="LastName" class="form-control" placeholder="Enter your last name" />
        </div>
        <div class="form-group">
            <label asp-for="UserName">Username</label>
            <input type="text" asp-for="UserName" class="form-control" placeholder="Choose a username" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input type="email" asp-for="Email" class="form-control" placeholder="Enter your email" />
        </div>
        <div class="form-group">
            <label asp-for="ProfilePicture">Profile Picture</label>
            <div class="file-input-wrapper">
                <button class="btn-file-input" type="button">Choose File</button>
                <input type="file" asp-for="ProfilePicture" class="form-control" accept="image/*" />
            </div>
            <div id="image-preview" class="image-preview"></div>
        </div>
        <button type="submit" class="btn btn-success">Save Changes</button>
    </form>
    <script src="~/js/UpdateProfilee.js"></script>
</div>